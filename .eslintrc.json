{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/no-unresolved": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never",
                "json": "always"
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "camelcase": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".ts",
                    ".json"
                ]
            }
        }
    }
}